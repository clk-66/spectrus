{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Spectrus",
  "version": "0.1.0",
  "identifier": "com.spectrus.desktop",

  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "",
    "frontendDist": "../../client/dist"
  },

  "app": {
    "windows": [
      {
        "title": "Spectrus",
        "width": 1280,
        "height": 800,
        "minWidth": 940,
        "minHeight": 600,
        "decorations": true,
        "transparent": false,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "wix": {},
      "nsis": {}
    },
    "linux": {
      "deb": {
        "depends": ["libsecret-1-0", "libssl3"]
      }
    }
  },

  "plugins": {
    "updater": {
      "pubkey": "",
      "endpoints": [
        "https://github.com/clk-66/spectrus/releases/latest/download/latest.json"
      ]
    },
    "deep-link": {
      "desktop": [
        { "schemes": ["spectrus"] }
      ]
    }
  }
}
